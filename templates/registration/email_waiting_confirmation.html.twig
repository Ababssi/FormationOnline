{% extends 'base.html.twig' %}

{% block title %}Waiting confirmation{% endblock %}

{% block body %}
    <main class="flex-shrink-0">
        <div class="container mt-5 mb-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    {% for flash_message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ flash_message }}</div>
                    {% endfor %}

                    <div class="card mb-3">
                        <div class="card-header bg-dark text-white">Message d'information</div>
                        <div class="card-body">
                            <p class="card-text">
                                Un mail de confirmation a été envoyé à votre adresse email.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}